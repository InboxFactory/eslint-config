{
  "root": true,
  "env": {
    "es6": true,
    "node": true
  },
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": 2019
  },
  "rules": {
    "max-len": ["error", {"code": 110}],
    "no-empty": ["error", {"allowEmptyCatch": true}],
    "quotes": ["error", "backtick"],
    "sort-imports": "error"
  }
}
